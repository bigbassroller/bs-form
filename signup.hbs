<div class="col-md-12">
	<form class="col-md-3 center-block">
	  <fieldset>
	    <div class="form-group">
	      <label class="control-label">Username</label>
	      <input class="form-control" type="text" name="username" {{input value=username}}>
	      <span class="validation-error"></span>
	    </div>
	    <div class="form-group">
	      <label class="control-label">Email</label>
	      <input class="form-control" type="text" name="email" {{input value=email}}>
	      <span class="validation-error"></span>
	    </div>
	    <div class="form-group">
	      <label class="control-label">Password</label>
	      <input class="form-control" type="password" name="password" {{input value=password}}>
	      <span class="validation-error"></span>
	    </div>
	    <div class="form-group">
	      <button class="btn btn-primary pull-right" {{action 'addNew'}}>Sign Up!</button>
	    </div>
	  </fieldset>
	</form>
</div>
<div class="col-md-12">
	{{message}}
</div>

{{outlet}}
